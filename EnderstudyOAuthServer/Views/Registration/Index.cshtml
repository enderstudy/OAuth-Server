@model EnderstudyOAuthServer.Data.Entities.User

@{
    Layout = "_Layout";
    ViewData["Title"] = "Registration";
}

<div class="container">
    <h1>Sign up for Enderstudy</h1>
    <form class="form" asp-action="Index">
        <div class="form__group">
            <label asp-for="UserName" class="form__label">Username</label>
            <input asp-for="UserName" class="form__input form__input--text" />
            <span asp-validation-for="UserName" class="form__validation"></span>
        </div>
        <div class="form__group">
            <label asp-for="Email" class="form__label"></label>
            <input asp-for="Email" type="email" class="form__input form__input--email"/>
            <span asp-validation-for="Email" class="form__validation"></span>
        </div>
        <div class="form__group">
            <label asp-for="PasswordHash" class="form__label">Password</label>
            <input asp-for="PasswordHash" type="password" class="form__input form__input--password"/>
            <span asp-validation-for="PasswordHash" class="form__validation"></span>
        </div>
        <div class="form__group text-right">
            <button type="submit" class="button button--block button--pink">Submit</button>
        </div>
    </form>
</div>