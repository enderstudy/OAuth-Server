@using Microsoft.AspNetCore.Identity
@using EnderstudyOAuthServer.Data.Entities
@inject SignInManager<User> SignInManager
<ul class="nav__menu__list">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav__menu__list__item">
            <a asp-action="PublishedApplications" asp-controller="Application">Published Applications</a>
        </li>
        <li class="nav__menu__list__item">
            <a href="#">Register Application</a>
        </li>
        @if (User.IsInRole("Administrator"))
        {
            <li class="nav__menu__list__item">
                <a asp-action="RegisterOfficialApp" asp-controller="Application">Register Official Application</a>
            </li>
        }
        <li class="nav__menu__list__item">
            <a href="#">My Account</a>
        </li>
        <li class="nav__menu__list__item">
            <a asp-area="Identity" asp-page="/Account/Logout">Log Out</a>
        </li>
    }
    else
    {
        <li class="nav__menu__list__item">
            <a asp-area="Identity" asp-page="/Account/Login">Log In</a>
        </li>
        <li class="nav__menu__list__item">
            <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>
