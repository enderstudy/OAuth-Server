@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Sign up for Enderstudy</h1>
<form class="form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="form__group">
        <label asp-for="Input.Username" class="form__label">Username</label>
        <input asp-for="Input.Username" class="form__input form__input--text" />
        <span asp-validation-for="Input.Username" class="form__validation"></span>
    </div>
    <div class="form__group">
        <label asp-for="Input.Email" class="form__label"></label>
        <input asp-for="Input.Email" type="email" class="form__input form__input--email"/>
        <span asp-validation-for="Input.Email" class="form__validation"></span>
    </div>
    <div class="form__group">
        <label asp-for="Input.Password" class="form__label">Password</label>
        <input asp-for="Input.Password" type="password" class="form__input form__input--password"/>
        <span asp-validation-for="Input.Password" class="form__validation"></span>
    </div>
    <div class="form__group">
        <label asp-for="Input.ConfirmPassword" class="form__label">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword" type="password" class="form__input form__input--password"/>
        <span asp-validation-for="Input.ConfirmPassword" class="form__validation"></span>
    </div>
    <div class="form__group text-right">
        <button type="submit" class="button button--block button--pink">Submit</button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />